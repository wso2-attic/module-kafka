<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="ballerina-natives-test-suite" parallel="false" thread-count="1">
    <test name="ballerina-kafka-consumer-tests" parallel="false" thread-count="1">
        <!-- Consumer-Related tests -->
        <classes>
            <class name="org.ballerinalang.kafka.nativeimpl.consumer.KafkaConsumerAssignTest"/>
            <class name="org.ballerinalang.kafka.nativeimpl.consumer.KafkaConsumerGetAvailableTopicsTest"/>
            <class name="org.ballerinalang.kafka.nativeimpl.consumer.KafkaConsumerGetTopicPartitionsTest"/>
            <class name="org.ballerinalang.kafka.nativeimpl.consumer.KafkaConsumerManualCommitTest"/>
            <class name="org.ballerinalang.kafka.nativeimpl.consumer.KafkaConsumerManualOffsetCommitTest"/>
            <class name="org.ballerinalang.kafka.nativeimpl.consumer.KafkaConsumerPauseTest"/>
            <class name="org.ballerinalang.kafka.nativeimpl.consumer.KafkaConsumerSubscribeToPatternTest"/>
            <class name="org.ballerinalang.kafka.nativeimpl.consumer.KafkaConsumerSeekTest"/>
            <class name="org.ballerinalang.kafka.nativeimpl.consumer.KafkaConsumerTest"/>
            <class name="org.ballerinalang.kafka.nativeimpl.consumer.KafkaConsumerUnsubscribeTest"/>
        </classes>
    </test>
    <test name="ballerina-kafka-producer-tests" parallel="false" thread-count="1">
        <!-- Producer-Related tests -->
        <classes>
            <class name="org.ballerinalang.kafka.nativeimpl.producer.KafkaProducerCloseTest"/>
            <class name="org.ballerinalang.kafka.nativeimpl.producer.KafkaProducerFlushRecordsTest"/>
            <class name="org.ballerinalang.kafka.nativeimpl.producer.KafkaProducerGetPartitionTest"/>
            <class name="org.ballerinalang.kafka.nativeimpl.producer.KafkaProducerTest"/>
        </classes>
    </test>
    <test name="ballerina-kafka-services-tests" parallel="false" thread-count="1">
        <!-- Kafka service related tests -->
        <classes>
            <class name="org.ballerinalang.kafka.nativeimpl.consumer.KafkaConsumerAdvancedServiceTest"/>
            <class name="org.ballerinalang.kafka.nativeimpl.consumer.KafkaConsumerServiceTest"/>
        </classes>
    </test>
    <test name="ballerina-kafka-transaction-tests" parallel="false" thread-count="1">
        <!-- Kafka transactions related tests -->
        <classes>
            <class name="org.ballerinalang.kafka.nativeimpl.producer.KafkaProducerAbortTransactionTest"/>
            <class name="org.ballerinalang.kafka.nativeimpl.producer.KafkaProducerCommitConsumerOffsetsTest"/>
            <class name="org.ballerinalang.kafka.nativeimpl.producer.KafkaProducerCommitConsumerTest"/>
        </classes>
    </test>
</suite>
